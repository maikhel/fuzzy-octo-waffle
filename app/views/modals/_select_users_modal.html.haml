.modal.fade{'id' => 'select_users', 'tabindex' => '-1', 'role' => 'dialog', 'aria-labelledby' => 'select_users_modal_label'}
  .modal-dialog{'role' => 'document'}
    .modal-content
      = form_tag registrate_subject_course_group_path(subject_id: @course_group.subject.id, id: @course_group.id)
      .modal-header
        %button.close{'type' => 'button', 'data-dismiss' => 'modal'}
          %span{'aria-hidden' => 'true'} Ã—
        %h4.modal-title#select_users_modal_label= t('.title')
      .modal-body
        %p= t('.body')
        - @students.each do |student|
          %p
            %span= check_box_tag 'user_ids[]', student.id
            %span= student.name
      .modal-footer
        %button.btn.btn-default{'type' => 'button', 'data-dismiss' => 'modal'}
          = t('.cancel')
        = submit_tag t('.registrate'), class: 'btn btn-primary'