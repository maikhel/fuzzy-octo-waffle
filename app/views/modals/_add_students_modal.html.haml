.modal.fade{'id' => 'add_students', 'tabindex' => '-1', 'role' => 'dialog', 'aria-labelledby' => 'add_students_modal_label'}
  .modal-dialog{'role' => 'document'}
    .modal-content
      = form_tag add_students_field_of_study_semester_path(field_of_study_id: @semester.field_of_study.id, id: @semester.id)
      .modal-header
        %button.close{'type' => 'button', 'data-dismiss' => 'modal'}
          %span{'aria-hidden' => 'true'} Ã—
        %h4.modal-title#add_students_modal_label= @semester
      .modal-body
        %p= t('.body')
        - @students.each do |student|
          %p
            %span= check_box_tag 'student_ids[]', student.id
            %span= student.name
      .modal-footer
        %button.btn.btn-default{'type' => 'button', 'data-dismiss' => 'modal'}
          = t('.cancel')
        = submit_tag t('.add_students'), class: 'btn btn-primary'