= simple_form_for([@field_of_study, @semester]) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-6.col-md-offset-3
        = f.input :start_date
      .col-md-6.col-md-offset-3
        = f.input :end_date
    .row
      .col-md-6.col-md-offset-3
        = f.association :field_of_study, include_blank: false, selected: @field_of_study.id
  .row
    .col-md-12
      .last-element.text-center
        = link_to t('.cancel'), field_of_study_semesters_path, class: 'btn btn-default'
        = f.submit t('.save'), class: 'btn btn-info'