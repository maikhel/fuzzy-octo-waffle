.container.container-fluid
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h4= t('.sign_in', :default => "Sign in")
        .panel-body
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f|
            = f.input :login, label: t('.login'), autofocus: true, hint: t('.login_hint')
            = f.input :password, label: t('.password'), autocomplete: "off"
            .forgotten-pass
              = link_to t(".forgot_your_password"), new_password_path(resource_name)
            .row
              .col-md-6.login-links
                = f.input :remember_me, inline_label: t('.remember_me'), as: :boolean
            .row
              .col-md-12
                = f.submit t('.sign_in'), class: "btn btn-primary"
