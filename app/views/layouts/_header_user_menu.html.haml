- if current_user
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = current_user.email
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to I18n.t("layouts.header.logout"), destroy_user_session_path, method: :delete
- else
  %li
    = link_to t("layouts.header.login"), new_user_session_path