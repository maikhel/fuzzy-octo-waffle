%footer
  .footer
    .container
      %p
        = link_to t(".home"), "#", class: "btn btn-link"
        = "|"
        = link_to t(".contact"), "#", class: "btn btn-link"
        = "|"
        = link_to t(".help"), "#", class: "btn btn-link"
        = "|"
        = link_to t(".about"), "#", class: "btn btn-link"
      - if false
        %li.div.language-image{class: I18n.locale}
          %ul
            - Language.available_without(session[:locale]).each do |lang|
              %li
                = link_to "#{lang}", change_language_path(:locale => lang), title: t(".languages.#{lang}")