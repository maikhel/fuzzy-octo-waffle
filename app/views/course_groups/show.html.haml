
.row
  .col-md-8.col-md-offset-2
    .panel{class: "#{group_class(@course_group.group_type)}"}
      .panel-heading
        %h4.white= @subject.title
      .panel-body
        .col-md-6
          %p
            %strong= t(".time") + ':'
            %span= "#{@course_group.start_time.strftime('%H:%M')} - #{@course_group.end_time.strftime('%H:%M')}"
          %p
            %strong= t('.registrated') + ':'
            %span= "#{@course_group.enrolled_students.count} / #{@course_group.max_limit}"
          %p
            %strong= t('.lecturer') + ':'
            %span= @course_group.lecturer.name
        .col-md-6
          %table.table
            %thead
              %tr
                %th= t('.students')
            %tbody
              - @students.each do |student|
                %tr
                  %td= student.name
          = link_to t('.registrate'), registrate_subject_course_group_path(subject_id: @course_group.subject.id, id: @course_group.id), class: 'btn btn-info pull-right'
.row
  .col-md-8.col-md-offset-2
    = link_to t('.back'), subject_course_groups_path, class: 'btn btn-default last-element'