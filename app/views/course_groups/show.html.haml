
.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading
        %h4= @course.title
      .panel-body
        %p
          %strong= t(".time") + ':'
          %span= "#{@course_group.start_time.strftime('%H:%M')} - #{@course_group.end_time.strftime('%H:%M')}"
        %p
          %strong= t('.max_limit') + ':'
          %span= @course_group.max_limit
        %p
          %strong= t('.lecturer') + ':'
          %span= @course_group.lecturer.name

.row
  .col-md-8.col-md-offset-2
    = link_to t('.back'), subject_course_groups_path, class: 'btn btn-default last-element'