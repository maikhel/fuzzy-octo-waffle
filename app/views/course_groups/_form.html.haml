= simple_form_for([@subject, @course_group]) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-3
        = f.input :time_period_num, label: t('.hours'), include_blank: false, collection: time_periods_select
      .col-md-3
        = f.input :weekday, label: t('.weekday'), include_blank: false, collection: weekdays_select
      .col-md-6
        = f.input :max_limit, label: t('.max_limit')
    .row
      .col-md-6
        = f.association :subject, label: t('.subject'), include_blank: false, selected: @subject.id
      .col-md-6
        = f.input :group_type, label: t('.group_type'), include_blank: false, collection: group_types_select
    .row
      .col-md-6
        = f.association :lecturer, label: t('.lecturer'), include_blank: false
  .row
    .col-md-12
      .pull-right.last-element
        = link_to t('.cancel'), subject_course_groups_path, class: 'btn btn-default'
        = f.submit t('.save'), class: 'btn btn-info'