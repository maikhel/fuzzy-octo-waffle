= form_for @user, :html => { :class => "form-horizontal user" } do |f|
  - if @user.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@user.errors.count, "error")
          prohibited this user from being saved:
      .panel-body
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label t('.email'), :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :email, :class => 'form-control'
    = f.error_span(:email)
  .form-group
    = f.label t('.first_name'), :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :first_name, :class => 'form-control'
    = f.error_span(:first_name)
  .form-group
    = f.label t('.last_name'), :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :last_name, :class => 'form-control'
    = f.error_span(:last_name)

  .form-group
    .col-md-12
      = f.submit t('.save'), :class => 'btn btn-primary pull-right'
